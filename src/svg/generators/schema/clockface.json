{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agni-project.org/schemas/svg-clockface-params.json",
  "title": "ClockFaceGenerator Parameters",
  "description": "Configuration for analog clock faces, angles, time, and modular arithmetic visuals. Japanese-inspired defaults: clean Roman/Arabic numerals, thin hands, minimal ticks, high-contrast for readability.",
  "type": "object",
  "required": [],
  "additionalProperties": false,
  "properties": {
    "time": {
      "type": "object",
      "properties": {
        "hour": { "type": "number", "minimum": 0, "maximum": 12 },
        "minute": { "type": "number", "minimum": 0, "maximum": 59 },
        "second": { "type": "number", "minimum": 0, "maximum": 59 }
      }
    },
    "style": {
      "type": "string",
      "enum": ["analogClock", "angleProtractor", "modulo12", "fractionCircle"],
      "default": "analogClock"
    },
    "hands": {
      "type": "object",
      "properties": {
        "hour": { "type": "boolean", "default": true },
        "minute": { "type": "boolean", "default": true },
        "second": { "type": "boolean", "default": false },
        "color": { "type": "string", "default": "#000" },
        "thickness": { "type": "object", "properties": {
          "hour": { "type": "number", "default": 4 },
          "minute": { "type": "number", "default": 2.5 },
          "second": { "type": "number", "default": 1.2 }
        }}
      }
    },
    "face": {
      "type": "object",
      "properties": {
        "ticks": { "type": "object", "properties": {
          "major": { "type": "boolean", "default": true },
          "minor": { "type": "boolean", "default": true },
          "color": { "type": "string", "default": "#333" }
        }},
        "numbers": { "enum": ["none", "arabic", "roman"], "default": "arabic" },
        "centerDot": { "type": "boolean", "default": true }
      }
    },
    "dimensions": {
      "type": "object",
      "properties": {
        "diameter": { "type": "number", "default": 200 }
      }
    },
    "angles": {
      "type": "object",
      "description": "For protractor/angle style.",
      "properties": {
        "showArc": { "type": "boolean", "default": false },
        "startAngle": { "type": "number", "default": 0 },
        "endAngle": { "type": "number" },
        "arcColor": { "type": "string", "default": "#1976d2" }
      }
    },
    "interactions": {
      "type": "object",
      "properties": {
        "draggableHands": { "type": "boolean", "default": false, "description": "Student sets time" },
        "sensorLink": {
          "type": "object",
          "properties": {
            "sensor": { "enum": ["gyro", "accelerometer", "none"] },
            "effect": { "enum": ["rotateHands", "setTime"] }
          }
        },
        "hapticFeedback": {
          "onHourSnap": { "enum": ["short", "none"] }
        },
        "animation": {
          "type": "object",
          "properties": {
            "type": { "enum": ["tickSeconds", "smoothHands"] },
            "duration": { "type": "number" }
          }
        }
      }
    },
    "accessibility": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "desc": { "type": "string", "description": "Current time, angles, hands position" }
      }
    },
    "cultural": {
      "type": "object",
      "properties": {
        "motif": { "enum": ["minimalJapanese", "traditionalClock", "default"] }
      }
    }
  }
}
