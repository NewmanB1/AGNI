{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agni-project.org/schemas/svg-balancescale-params.json",
  "title": "BalanceScaleGenerator Parameters",
  "description": "Configuration for balance scale metaphors: equality, equations, mass comparison, levers. Japanese-inspired defaults: clean fulcrum, thin beams, minimal labels, subtle tilt animation, high-contrast pans.",
  "type": "object",
  "required": ["leftMass", "rightMass"],
  "additionalProperties": false,
  "properties": {
    "leftMass": {
      "type": "number",
      "description": "Total 'weight' on left pan (can be object count or numeric value)."
    },
    "rightMass": {
      "type": "number",
      "description": "Total 'weight' on right pan."
    },
    "style": {
      "type": "string",
      "enum": ["simple", "equation", "lever", "comparison"],
      "default": "simple"
    },
    "dimensions": {
      "type": "object",
      "properties": {
        "width": { "type": "number", "default": 320 },
        "height": { "type": "number", "default": 240 }
      }
    },
    "pans": {
      "type": "object",
      "properties": {
        "leftItems": { "type": "array", "items": { "type": "string" }, "description": "Icons/labels on left (e.g., ['apple','apple'])" },
        "rightItems": { "type": "array", "items": { "type": "string" } },
        "panColor": { "type": "string", "default": "#e0e0e0" },
        "panStroke": { "type": "string", "default": "#555" }
      }
    },
    "beam": {
      "type": "object",
      "properties": {
        "tiltAngle": { "type": "number", "default": 0, "description": "Degrees; positive = left down" },
        "fulcrumShape": { "enum": ["triangle", "diamond", "circle"], "default": "triangle" },
        "color": { "type": "string", "default": "#424242" }
      }
    },
    "labels": {
      "type": "object",
      "properties": {
        "leftLabel": { "type": "string", "default": "Left" },
        "rightLabel": { "type": "string", "default": "Right" },
        "equation": { "type": "string", "description": "e.g., '2x + 3 = 11'" },
        "font": { "type": "object", "properties": { "size": { "type": "number" } } }
      }
    },
    "interactions": {
      "type": "object",
      "properties": {
        "draggableMass": { "type": "boolean", "default": false, "description": "Drag items between pans" },
        "sensorLink": {
          "type": "object",
          "properties": {
            "sensor": { "enum": ["gyro", "accelerometer", "none"] },
            "effect": { "enum": ["tiltBeam", "addMass"] }
          }
        },
        "hapticFeedback": {
          "onBalance": { "enum": ["pattern:success", "none"] },
          "onImbalance": { "enum": ["short", "none"] }
        },
        "animation": {
          "type": "object",
          "properties": {
            "type": { "enum": ["tiltSmooth", "pulseBalance"] },
            "duration": { "type": "number" }
          }
        }
      }
    },
    "accessibility": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "desc": { "type": "string", "description": "Describe balance state, masses, equation" }
      }
    },
    "cultural": {
      "type": "object",
      "properties": {
        "motif": { "enum": ["minimalJapanese", "traditionalScale", "default"] }
      }
    }
  }
}
