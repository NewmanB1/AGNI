{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/NewmanB1/AGNI/schemas/ols.schema.json",
  "title": "Open Lesson Standard (OLS) v1.5",
  "description": "Harmonized schema with Dublin Core metadata and Strict Threshold Syntax.",
  "type": "object",
  "required": ["version", "meta", "steps"],
  "properties": {
    "version": { 
      "type": "string", 
      "enum": ["1.5"],
      "description": "Strict version pinning." 
    },
    "meta": {
      "type": "object",
      "required": ["identifier", "title", "rights", "subject"],
      "properties": {
        "identifier": { 
          "type": "string", 
          "description": "dc:identifier (UUID or Slug)" 
        },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "language": { 
          "type": "string", 
          "default": "en", 
          "pattern": "^[a-z]{2}(-[A-Z]{2})?$" 
        },
        "rights": { 
          "type": "string", 
          "default": "AGPL-3.0", 
          "description": "dc:rights (formerly 'license')" 
        },
        "subject": {
          "type": "array",
          "description": "dc:subject (Set Theory Tags).",
          "items": { "type": "string" },
          "minItems": 1
        },
        "coverage": { 
          "type": "string", 
          "description": "dc:coverage (Spatial/Temporal)" 
        },
        "target_profile": { 
          "type": "array", 
          "items": { "type": "string" } 
        }
      }
    },
    "ontology": {
      "type": "object",
      "properties": {
        "requires": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["skill"],
            "properties": {
              "skill": { "type": "string" },
              "verifiable": { "type": "boolean", "default": true }
            }
          }
        },
        "provides": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["skill", "level"],
            "properties": {
              "skill": { "type": "string" },
              "level": { "type": "integer" }
            }
          }
        }
      }
    },
    "gate": {
      "type": "object",
      "description": "Prerequisite Logic",
      "required": ["type", "on_fail"],
      "properties": {
        "type": { "type": "string", "enum": ["quiz", "manual_verification"] },
        "skill_target": { "type": "string" },
        "question": { "type": "string" },
        "expected_answer": { "type": "string" },
        "on_fail": { "type": "string", "pattern": "^redirect:.*" }
      },
      "if": { "properties": { "type": { "const": "quiz" } } },
      "then": { "required": ["question", "expected_answer"] }
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": { "type": "string", "enum": ["instruction", "hardware_trigger", "quiz"] },
          "content": { "type": "string" },
          "sensor": { 
            "type": "string", 
            "enum": ["accelerometer", "gyroscope", "microphone", "light"] 
          },
          "threshold": { 
            "type": "string",
            "description": "Formal Syntax: Subject Operator Value[Unit]",
            "pattern": "^([a-z\\.]+)\\s*(>|<|>=|<=|==)\\s*([0-9\\.]+)(g|ms|s|deg|db|lux|m\\/s2)?$"
          },
          "feedback": { "type": "string" },
          "answer_options": { "type": "array", "items": { "type": "string" } },
          "correct_index": { "type": "integer" }
        }
      }
    },
    "signatures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["role", "entity", "signature"],
        "properties": {
          "role": { "type": "string" },
          "entity": { "type": "string" },
          "key_id": { "type": "string" },
          "signature": { "type": "string" }
        }
      }
    }
  }
}
