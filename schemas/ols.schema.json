{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/NewmanB1/AGNI/schemas/ols.schema.json",
  "title": "Open Lesson Standard (OLS) v1.5.1",
  "type": "object",
  "required": ["version", "meta", "steps"],
  "properties": {
    "version": { "type": "string", "enum": ["1.5.1"] },
    "meta": {
      "type": "object",
      "required": ["identifier", "title", "rights", "subject"],
      "properties": {
        "identifier": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "language": { "type": "string", "default": "en" },
        "rights": { "type": "string", "default": "AGPL-3.0" },
        "subject": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        "coverage": { "type": "string" },
        "target_profile": { "type": "array", "items": { "type": "string" } }
      }
    },
    "gate": {
      "type": "object",
      "required": ["type", "on_fail"],
      "properties": {
        "type": { "type": "string", "enum": ["quiz", "manual_verification"] },
        "skill_target": { "type": "string" },
        "question": { "type": "string" },
        "expected_answer": { "type": "string" },
        "on_fail": { "type": "string", "pattern": "^redirect:.*" }
      },
      "allOf": [
        {
          "if": { "properties": { "type": { "const": "quiz" } } },
          "then": { "required": ["question", "expected_answer"] }
        },
        {
          "if": { "properties": { "type": { "const": "manual_verification" } } },
          "then": { "required": ["skill_target"] }
        }
      ]
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": { "type": "string", "enum": ["instruction", "hardware_trigger", "quiz"] },
          "content": { "type": "string" },
          "sensor": { "type": "string", "enum": ["accelerometer", "gyroscope", "microphone", "light"] },
          "threshold": { 
            "type": "string",
            "pattern": "^([a-z\\.]+)\\s*(>|<|>=|<=|==)\\s*(-?[0-9\\.]+)(g|ms|s|deg|db|lux|m\\/s2)?$"
          },
          "feedback": { "type": "string" },
          "answer_options": { "type": "array", "items": { "type": "string" } },
          "correct_index": { "type": "integer" }
        },
        "allOf": [
          {
            "if": { "properties": { "type": { "const": "quiz" } } },
            "then": { "required": ["answer_options", "correct_index"] }
          },
          {
            "if": { "properties": { "type": { "const": "hardware_trigger" } } },
            "then": { "required": ["sensor", "threshold", "feedback"] }
          }
        ]
      }
    },
    "ontology": { "type": "object" }, 
    "signatures": { "type": "array" }
  }
}
