{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://openlesson.org/schemas/v0.1/lesson.json",
  "title": "Open Lesson Standard v0.1",
  "type": "object",
  "required": ["meta", "ontology", "steps"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["id", "title", "version", "license"],
      "properties": {
        "id": { "type": "string", "pattern": "^[a-z0-9\\-]+$" },
        "title": { "type": "string" },
        "version": { "type": "string" },
        "license": { "type": "string", "enum": ["AGPL-3.0", "CC-BY-4.0", "CC-BY-SA-4.0"] },
        "language": { "type": "string", "pattern": "^[a-z]{2}-[A-Z]{2}$" },
        "target_profile": {
          "type": "array",
          "items": { "type": "string", "enum": ["visual", "haptic_seeker", "kinetic", "auditory"] }
        }
      }
    },
    "ontology": {
      "type": "object",
      "properties": {
        "requires": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["skill"],
            "properties": { "skill": { "type": "string" } }
          }
        },
        "provides": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["skill", "level"],
            "properties": {
              "skill": { "type": "string" },
              "level": { "type": "integer" }
            }
          }
        }
      }
    },
    "signatures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["entity", "role", "signature"],
        "properties": {
          "entity": { "type": "string" },
          "role": { "type": "string", "enum": ["author", "approver", "translator"] },
          "key_id": { "type": "string" },
          "signature": { "type": "string" }
        }
      }
    },
    "gate": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "on_fail"],
        "properties": {
          "type": { "type": "string", "enum": ["quiz", "skill_check"] },
          "skill_target": { "type": "string" },
          "question": { "type": "string" },
          "answers": { "type": "array" },
          "correct_index": { "type": "integer" },
          "on_fail": { "type": "string" }
        }
      }
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": { "type": "string", "enum": ["instruction", "hardware_trigger", "quiz"] },
          "text": { "type": "string" },
          "sensor": { "type": "string", "enum": ["accelerometer", "vibration", "touch", "orientation"] },
          "threshold": { "type": "string" },
          "feedback": { "type": "string" }
        }
      }
    }
  }
}
