{
  "name": "agni-core",
  "version": "0.1.0",
  "description": "AGNI: The compiler and runtime for the Open Lesson Standard (OLS).",
  "bin": {
    "agni": "./src/compiler.js"
  },
  "keywords": [
    "agni",
    "ols",
    "offline-education",
    "sensor-learning",
    "education",
    "compiler",
    "yaml",
    "lesson-builder",
    "interactive-learning"
  ],
  "author": "AGNI Maintainers",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/NewmanB1/AGNI.git"
  },
  "bugs": {
    "url": "https://github.com/NewmanB1/AGNI/issues"
  },
  "homepage": "https://github.com/NewmanB1/AGNI#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "unified": "^9.2.0",
    "remark-parse": "^9.0.0",
    "remark-html": "^13.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "scripts": {
    "compile": "node src/compiler.js",
    "build": "node src/compiler.js lessons/gravity.yaml --format=html --output=dist/gravity.html",
    "build:native": "node src/compiler.js lessons/gravity.yaml --format=native --output-dir=dist/native-gravity",
    "build:all": "npm run build && npm run build:native",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "dev": "node --watch src/compiler.js lessons/gravity.yaml --format=html --output=dist/gravity.html",
    "lint": "eslint src/**/*.js --max-warnings=0",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "test": "echo 'Tests not set up yet' && exit 0"
  }
}
